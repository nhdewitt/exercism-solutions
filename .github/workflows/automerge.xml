name: automerge
on:
  pull_request:
    types: [labeled, opened, synchronize, reopened, ready_for_review]
permissions:
  contents: write
  pull-requests: write

jobs:
  automerge:
    if: github.event.pull_request.user.login == 'exercism-solutions-syncer'
    runs-on: ubuntu-latest
    steps:
      - name: Merge when ready (label = automerge)
        uses: pascalgn/automerge-action@v0.16.4
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
          MERGE_METHOD: squash
          AUTOCLOSE: "true"
          # Require a label so you can opt-in per PR:
          MERGE_LABELS: automerge
          # Or instead of a label, you could rely on approvals/status checks only.
